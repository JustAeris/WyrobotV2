@using Wyrobot.Api.Models
@{
    ViewBag.Title = "title";
    Layout = "_Layout";
    var v = ViewData["settings"] as GuildSettings;
}

<h2>Leveling</h2>
<form>
  
  <div class="form-group row">
    <label for="levelingMessageControl" class="col-sm-2 col-form-label">Message</label>
    <div class="col-sm-10">
      <input type="checkbox" class="form-check-input" id="levelingEnabledControl">
      <label class="form-check-label" for="levelingEnabledControl">Enabled</label>
    </div>
  </div>
  
  <div class="form-group row">
    <label for="levelingMessageControl" class="col-sm-2 col-form-label">Message</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="levelingMessageControl" placeholder="@v.Settings.Leveling.Message">
      <small id="multiplierHelp" class="form-text text-muted">You can use {user} and {level} as values in your message.</small>
    </div>
  </div>
  
  <div class="form-group row">
    <label for="levelingMultiplierControl" class="col-sm-2 col-form-label">Multiplier</label>
    <div class="col-sm-10">
      <input type="number" class="form-control" id="levelingMultiplierControl" placeholder="@v.Settings.Leveling.Multiplier">
    </div>
  </div>
  
  <button type="submit" class="btn btn-primary" asp-action="ShowValues">Submit</button>
  
</form>
